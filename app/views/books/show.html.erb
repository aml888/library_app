

<p>
  <strong>Title:</strong>
  <%= @book.title %>
</p>

<p>
  <strong>Author:</strong>
  <%= @book.author %>
</p>

<p>
  <strong>Picture:</strong>
  <%= image_tag(@book.picture_url, :width => 200, :height => 250) if @book.picture.present? %>
</p>

<p>
  <strong>Isbn:</strong>
  <%= @book.ISBN %>
</p>

<p>
  <strong>Description:</strong>
  <%= @book.description %>
</p>


<h3>Reviews</h3>
<% @reviews.each do |review| %>
  <div>
    <strong><%= review.user_name %></strong>
    <br />
    <p><%= review.body %></p>
    <p><%= link_to 'Delete', review_path(review), method: :delete, data: { confirm: 'Are you sure?' } %></p>
  </div>
<% end %>
<%= render 'reviews/form' %>



