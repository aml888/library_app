<table>
  <thead>
    <tr>
      <th> Title </th>
	  <th>Picture</th>
      <th>Description</th>
	
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
    <% @pending_books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= image_tag book.picture_url(:thumb) if book.picture? %></td>
        <td><%= book.description %></td>
	
		<td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
	
    <% end %>
  </tbody>
</table>

= link_to "Approve", approve_topic_path(topic), class: 'btn btn-mini' if section == :pending_topics
= link_to "Complete", complete_topic_path(topic), class: 'btn btn-mini' if section == :approved_topics

    